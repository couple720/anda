<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anda.admin.dao.AdminMenuMapper">
    <resultMap id="baseAdminMenuResultMap" type="AdminMenuEntity">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="path" property="path"/>
        <result column="icon" property="icon"/>
        <result column="type" property="type"/>
        <result column="visible" property="visible"/>
        <result column="weight" property="weight"/>
        <result column="permission" property="permission"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <association property="parent" column="parent_id" javaType="AdminMenuEntity" select="selectById"/>
    </resultMap>

    <sql id="selectAllFields">
        select id,
               parent_id,
               title,
               path,
               icon,
               type,
               visible,
               weight,
               permission,
               create_time,
               update_time
        from t_admin_menu
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultType="AdminMenuEntity">
        <include refid="selectAllFields"/>
        where id = #{id}
    </select>

    <select id="selectList" resultMap="baseAdminMenuResultMap">
        <include refid="selectAllFields"/>
    </select>
</mapper>
